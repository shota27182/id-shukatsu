    <div class="partner-sign-up">
        <div class="form-heading">会社情報</div>
        <%= form_with model: @event, method: :post, url: partner_page_seminar_index_path, local: true do |f| %>
          <div class="general-profile">
            <div class="general-title">基本情報</div>
              <div>
                <p>本選考イメージ画像：</p>
                <%= f.file_field :img %>
              </div>
              <div class="form-detail form-top">
                  <p>本選考タイトル</p>
                  <%=f.text_field :name, class: "form-field"  %>
              </div>
              <div class="form-detail">
                  <p>概要</p>
                  <%=f.text_field :introduction, class:"form-field" %>
              </div>
              <div class="form-detail">
                  <p>本ガイダンスのポイント</p>
                  <%=f.text_field :point, class:"form-field" %>
              </div>
              <div class="form-detail">
                  <p>当日の流れ</p>
                  <%=f.text_field :flow, class:"form-field" %>
              </div>
              <div id="event-profiles-association-insertion-point" >
                 <%= f.fields_for :event_profiles do |builder| %>
                     <%= render 'event_profile_fields', f: builder %>
                 <% end %>
             </div>
             <%= link_to_add_association '＋  募集要項を追加する', f, :event_profiles,class: 'mypage-programming-post',data: {association_insertion_node: '#event-profiles-association-insertion-point',association_insertion_method: 'append'} %>
             <div id="event-schedules-association-insertion-point" >
                 <%= f.fields_for :event_schedules do |builder| %>
                     <%= render 'event_schedule_fields', f: builder %>
                 <% end %>
             </div>
             <%= link_to_add_association '＋  募集要項を追加する', f, :event_schedules,class: 'mypage-programming-post',data: {association_insertion_node: '#event-schedules-association-insertion-point',association_insertion_method: 'append'} %>
          </div>
          <%= f.submit "次のステップへ進む", class: "form-submit" %>
        <% end %>
    </div>
</div>

<script>
  $(function(){
  $('.section').hide();
  
  $('.secList').on('click',function(){
        // クリックした要素の ID と違うクラス名のセクションを非表示
    $('.section').not($('.'+$(this).attr('id'))).hide();
    // クリックした要素の ID と同じクラスのセクションを表示
    $('.'+$(this).attr('id')).toggle();
  });
});
</script>
