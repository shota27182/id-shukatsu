<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@user_toefl, remote: true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">TOEFL</h4>
      </div>
      <div class="modal-body">
        <div class="programming-title">
            <div class="form-detail form-top">
                    <p>種類</p>
                    <%= f.select :type, UserToefl.types.keys, {prompt: '選択してください'} %>
            </div>
            <div class="form-detail form-top">
                    <p>点数</p>
                    <%= f.number_field :toefl %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">戻る</button>
          <%= f.submit "保存する", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>